<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:windowCloseOnTouchOutside" tools:ignore="NewApi">false</item>
    </style>
    
  	<style name="Theme.Transparent" parent="android:Theme">
    	<item name="android:windowIsTranslucent">true</item>
    	<item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:backgroundDimEnabled">false</item>
  	</style>
  
    <style name="CustomDialogTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

   	<style name="CustomDialogTheme2" parent="android:Theme.Dialog">
      <item name="android:windowBackground">@android:color/transparent</item>
      <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="TextLargeGreen">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextLarge">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KeyButton">
        <item name="android:background">@drawable/btn_number</item>
        <item name="android:textSize">@dimen/text_size_number</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#009bc8</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="KeyButtonOk">
        <item name="android:background">@drawable/btn_ok</item>
        <item name="android:textSize">@dimen/text_size_number</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
    </style>
    
     <style name="KeyButtonRefresh">
        <item name="android:background">@drawable/btn_refesh</item>
        <item name="android:textSize">@dimen/text_size_number</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
    </style>
    

    <style name="TextBlue">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="TextGreen">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="TextGreenLogin">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_login</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    
   	<style name="TextGreenNoPadding">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
   	<style name="TextGreenButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="TextOrange">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/yellow</item>
    </style>
    
     <style name="TextOrangePremium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="PaddingImage">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

</resources>