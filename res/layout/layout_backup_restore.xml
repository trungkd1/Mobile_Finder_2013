<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_top_buttom"
    android:paddingLeft="@dimen/padding_left_right"
    android:paddingRight="@dimen/padding_left_right" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/btn_backup"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_save" />

            <TextView
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_textview"
                android:ellipsize="end"
                android:text="@string/backup_data" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_backup"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_empty"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view_3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/btn_restore"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_restore" />

            <TextView
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_textview"
                android:ellipsize="end"
                android:text="@string/restore_data" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_restore"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_empty"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view_3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/btn_auto_back_up"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_auto_back_up"
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_wifi" />

            <TextView
                android:id="@+id/text_auto_back_up"
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_textview"
                android:ellipsize="end"
                android:text="@string/auto_backup_data" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_auto_backup"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_bg"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</LinearLayout>