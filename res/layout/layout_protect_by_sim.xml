<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_top_buttom"
    android:paddingLeft="@dimen/padding_left_right"
    android:paddingRight="@dimen/padding_left_right" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/sim_protect_panel">

        <LinearLayout
            android:id="@+id/btn_protect_by_sim"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ic_protect_sim"
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_sim_protect_selector" />

            <TextView
                android:id="@+id/text_protect_sim"
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right__negative_textview"
                android:ellipsize="end"
                android:textColor="@color/auto_protect_text"
                android:text="@string/protect_by_sim" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_control_by_sim"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_bg"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view" />

    <TextView
        style="@style/TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right_editText"
        android:text="@string/set_phone_number" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/select_phones_panel">

        <EditText
            android:id="@+id/edit_number"
            style="@style/TextMedium"
            android:layout_width="@dimen/width_editText_medium"
            android:layout_height="@dimen/height_editText_medium"
            android:background="@drawable/border_text"
            android:editable="false" />

        <View
            android:layout_width="@dimen/width_view_2"
            android:layout_height="@dimen/height_view" />

        <Button
            android:id="@+id/btn_set_phone_number"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:background="@drawable/button_add_bg" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/change_sim_panel">

        <LinearLayout
            android:id="@+id/btn_change_sim"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ic_change_sim"
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_limit_login_selector" />

            <TextView
                android:id="@+id/text_change_sim"
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right__negative_textview"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/auto_protect_text"
                android:text="@string/notify_when_changed_sim" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_notify_changed_sim"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_bg"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right__negative_button"
        android:orientation="horizontal" android:id="@+id/select_sound_panel">

        <LinearLayout
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_ring_selector" />

            <TextView
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right__negative_textview"
                android:ellipsize="end"
                android:textColor="@color/auto_protect_text"
                android:singleLine="true"
                android:text="@string/select_alarm_sound" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/width_view_3"
            android:layout_height="@dimen/height_view" />

        <Button
            android:id="@+id/btn_select_alarm_sound"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/button_add_bg"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>