    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_top_buttom"
    android:paddingLeft="@dimen/padding_left_right"
    android:paddingRight="@dimen/padding_left_right" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:id="@+id/nahi_protect_panel">

        <LinearLayout
            android:id="@+id/btn_protect_from_nahi"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ic_nahi"
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_nahi_protect_selector" />

            <TextView
                android:id="@+id/text_nahi"
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_textview"
                android:ellipsize="end"
                android:textColor="@color/auto_protect_text"
                android:singleLine="true"
                android:text="@string/protect_from_nahi" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_control_from_webserver"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_bg"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view" />

    <TextView
        style="@style/TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right_editText"
        android:text="@string/login_nahi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right_editText"
        android:orientation="horizontal" 
        android:id="@+id/select_account_panel" >
        

        <EditText
            android:id="@+id/login_nahi_acc"
            style="@style/TextMedium"
            android:layout_width="@dimen/width_editText_medium"
            android:layout_height="@dimen/height_editText_medium"
            android:background="@drawable/border_text"
            android:editable="false"
            android:singleLine="true"
            android:ems="10" />
        
         <View
        android:layout_width="@dimen/width_view_2"
        android:layout_height="@dimen/height_view" />
         
        <Button
            android:id="@+id/btn_login_nahi"
            android:layout_width="@dimen/width_button"
            android:layout_height="@dimen/height_button"
            android:layout_gravity="right"
            android:background="@drawable/button_add_bg" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view_2"
        android:layout_height="@dimen/height_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:id="@+id/monitor_all_time_panel">

        <LinearLayout
            android:id="@+id/btn_tracking"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ic_24h"
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_24h_selector" />

            <TextView
                android:id="@+id/text_tracking"
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_textview"
                android:ellipsize="end"
                android:textColor="@color/auto_protect_text"
                android:singleLine="true"
                android:text="@string/following_device_on_24h" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_following_device_on_24h"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_bg"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/width_view"
        android:layout_height="@dimen/height_view" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:id="@+id/wipe_data_panel">

        <LinearLayout
            android:id="@+id/btn_wipe_data"
            android:layout_width="@dimen/width_button_fuction"
            android:layout_height="@dimen/height_button_function"
            android:background="@drawable/button_short_green_bg"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ic_wipedata"
                style="@style/PaddingImage"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_marginLeft="@dimen/margin_left_right_button"
                android:src="@drawable/ic_delete_data_selector" />

            <TextView
                android:id="@+id/text_wipedata"
                style="@style/TextGreen"
                android:layout_width="@dimen/width_text"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right_textview"
                android:ellipsize="end"
                android:textColor="@color/auto_protect_text"
                android:text="@string/wipe_data" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggle_wipe_data"
            android:layout_width="@dimen/width_toggle"
            android:layout_height="@dimen/height_toggle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_buttom_toggle"
            android:background="@drawable/switch_bg"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_premium"
        android:gravity="center"
        style="@style/TextOrangePremium"
        android:layout_marginTop="@dimen/height_view"
        android:layout_width="@dimen/width_button_premium"
        android:layout_height="@dimen/height_button_premium"
        android:background="@drawable/btn_premium"
        android:paddingBottom="@dimen/margin_top_buttom_textview"
        android:text="Premium" />
    </LinearLayout>

